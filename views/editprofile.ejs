<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/public/assets/register.css">
</head>
<body>
   <!-- This is  start of the navbar -->
   <div class="topnav">
    <a id="title" href="/">VIT Pro Bud</a>
    <a class="alig" href="/projects">Explore</a>
    <a class="alig" href="/about">About</a>
    <a class="alig" href="/contact">Contact</a>
    <a class="alig" href="/gallery">Gallery</a>
    <%  if(!user){%>
    <a class="alig" href="/register">Register</a>
    <a class="alig" href="/login">Login</a>
    <%  }else{ %>
        <a class="alig" href="/logout">Logout</a>
 
    <a href="/userprofile"><img src="/<%= user.img.path %>" alt=""></a>
    <%  } %>
</div>
  <!-- navbar end -->

   <!-- edit profile form -->
   <h2 id="result" style="color: rgb(10, 80, 53); margin: auto;text-align: center;margin-bottom: 20px; margin-top: 20px;"></h2>
    <table>
      
        <tr>
          <td>
            <div>
     
              <form name="login" onsubmit="return checkinput()" action="/userprofile?_method=PUT" method="POST" enctype="multipart/form-data" id="LoginForm">
                <div>
                  <h5 id="msg" style="color: red; align-content: center;"></h5>
                </div>
    
                
              
    
                <div class="form-group">
                  <input type="email" value="<%=puser.username%>" class="form-control" id="inputEmail4" name="username" disabled placeholder="VIT Email" required/>
                </div>
                <hr>
                <div class="form-group">
                  <input   type="text" class="form-control" id="inputEmail4" name="email" placeholder="Name" value="<%=puser.email%>" required/>
                </div>
                <hr>
  
               <div class="form-group  gap">
                <input type="text" value="<%=puser.institute%>" class="form-control" id="inputInstitute" name="institute" placeholder="Institute" required/>
              </div>
              <hr>
              
              <div class="form-group  gap">
                <input type="text" value="<%=puser.about%>" class="form-control" id="about" name="about" placeholder="About" required/>
              </div>
              <hr>

              <div class="form-group  gap">
                <label>Upload your profile photo</label>
                <input type="file" name="myImage" value="<%=puser.img.path.substring(15,50)%>" accept="image/*" required/>
              </div>
             
              <hr>
              <div class="form-group  gap">
                <input type="text" class="form-control" value="<%=puser.language%>" id="inputLanguages" name="language"
                  placeholder="Favourite Programming Language" />
              </div>
              <hr>
              <div class="form-group  gap">
                <input type="text" class="form-control" id="githublink" name="github" value="<%=puser.github%>"
                  placeholder="Github Link" />
              </div>
              <hr>
              <div class="form-group gap">
                <input type="text" class="form-control" id="linkedinLink" name="linkedIn" value="<%=puser.linkedIn%>"
                  placeholder="LinkedIn Link" />
              </div>
              <hr>
            
                <div>
                  &nbsp;&nbsp;
                  <button type="submit" id="registerbtn" class="btn">Save</button>
                  
                </div>
              </form>
            </div>
          </td>
        </tr>
      </table>
    <!-- edit profile form end -->


    <!-- footer start -->
      <div class="footer">
        <p>Copyright &#169; 2021 Kartik Khanna</p>
    </div>
    <!-- footer end -->

    <script>
     
  document.getElementById("registerbtn").addEventListener("click", function() {
  document.getElementById("result").innerHTML = "Your Changes has been made";
  window.scrollTo({ top: 0, behavior: 'smooth' });
});
   
      function checkinput()
      {
    
        var str=document.login.linkedIn.value;
         var result=str.match(/(ftp|http|https):\/\/?((www|\w\w)\.)?linkedin.com(\w+:{0,1}\w*@)?(\S+)(:([0-9])+)?(\/|\/([\w#!:.?+=&%@!\-\/]))?/)
       
         if(document.login.username.value=="")
         {
             alert("Please enter the User Email");
           return false;
         }
   
        
         else if(result==null){

        alert("Wrong LinkedIn Link")
        return false;
         }
       
         else{
 
         
          return true;
         }
         
      }
   
    
      </script>
</body>
</html>