      <a href="/userprofile"><img src="/<%= user.img.path %>" alt=""></a>
      <%  } %>
  </div>
    <!-- navbar end -->

    <!-- owner project list -->
      <div class="row">

        <%userprojects.projects.forEach(function(project){%>
        <div class="column">
